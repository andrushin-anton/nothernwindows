<div class="page-title">
  <div class="title_left">
    <h3>Customers <small></small></h3>
  </div>

  <div class="title_right">
    <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
      <%= form_tag customers_path, :method => 'get' do %>
      <div class="input-group">
          <input type="text" name="search" value="<%= params[:search] %>" class="form-control" placeholder="Search for...">
          <span class="input-group-btn">
          <%= submit_tag "Go!", :name => nil, :class => "btn btn-default search" %>
          </span>
      </div>
      <% end %>
    </div>
  </div>
</div>

<div class="col-md-6 col-sm-6 col-xs-12" style="width:100%">
  <div class="x_panel">
    <div class="x_title">
      <h2><%= link_to 'Add new', new_customer_path %></h2>
      <!--
      <ul class="nav navbar-right panel_toolbox">
        <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
        </li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
          <ul class="dropdown-menu" role="menu">
            <li><a href="#">Settings 1</a>
            </li>
            <li><a href="#">Settings 2</a>
            </li>
          </ul>
        </li>
        <li><a class="close-link"><i class="fa fa-close"></i></a>
        </li>
      </ul>
      -->
      <div class="clearfix"></div>
    </div>
    <div class="x_content">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>#</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Phone</th>
            <th>Email</th>
            <th>Details</th>
            <th>#Edit</th>
          </tr>
        </thead>
        <tbody>
        <% @customers.each do |customer| %>
          <tr>
            <th scope="row"><%= customer.id %></th>
            <td><%= customer.first_name %></td>
            <td><%= customer.last_name %></td>
            <td><%= customer.phone %></td>
            <td><%= customer.email %></td>
            <td><%= truncate(customer.details, :length => 17) %></td>
            <td><%= link_to '<i class="fa fa-folder"></i> View'.html_safe, customer, :class => 'btn btn-primary btn-xs' %>&nbsp;<%= link_to '<i class="fa fa-pencil"></i> Edit'.html_safe, edit_customer_path(customer), :class => 'btn btn-info btn-xs' %>&nbsp;<%= link_to '<i class="fa fa-trash-o"></i> Remove'.html_safe, customer, :class => 'btn btn-danger btn-xs',  method: :delete, data: { confirm: 'Are you sure?' } %><%= ' Status:' + customer.status if customer.status != 'ACTIVE' %></td>
         </tr>
        <% end %>
        </tbody>
      </table>

      <%= paginate @customers, :left => 1, :right => 3 %>

    </div>
  </div>
</div>
