
  <div class="page-title">
    <div class="title_left">
      <h3>Appointments</h3>
    </div>

    <div class="title_right">
    <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
      <%= form_tag appointments_path, :method => 'get' do %>
      <div class="input-group">
          <input type="text" name="search" value="<%= params[:search] %>" class="form-control" placeholder="Search for...">
          <span class="input-group-btn">
          <%= submit_tag "Go!", :name => nil, :class => "btn btn-default search" %>
          </span>
      </div>
      <% end %>
    </div>
  </div>

  <div class="clearfix"></div>

  <div class="row">
    <div class="col-md-12">
      <div class="x_panel">
        <div class="x_title">
          <h2>Click to add/edit</h2>
          <div class="clearfix"></div>
        </div>
        <div class="x_content">


          <div id="calendar" class="fc fc-unthemed fc-ltr">
          <div class="fc-toolbar fc-header-toolbar">
            <div class="fc-left">
              <div class="fc-button-group">
                <button type="button" class="fc-prev-button fc-button fc-state-default fc-corner-left" onclick="redirect('<%= @prev_url %>')">
                <span class="fc-icon fc-icon-left-single-arrow"></span>
                </button>
                <button type="button" class="fc-next-button fc-button fc-state-default fc-corner-right" onclick="redirect('<%= @next_url %>')">
                <span class="fc-icon fc-icon-right-single-arrow"></span>
                </button>
              </div>
              <button type="button" class="fc-today-button fc-button fc-state-default fc-corner-left fc-corner-right" onclick="redirect('<%= appointments_path%>')">today</button>
            </div>
            <div class="fc-right">
            <div class="fc-button-group">
            </div>
          </div>
          
          <div class="fc-center">
            <h2><%= @days_from_this_week.first.to_formatted_s(:short) %> â€“ <%= @days_from_this_week.to_a.last.to_formatted_s(:short) %>, 2017</h2>
          </div>
          
          <div class="fc-clear"></div>
          </div>
          
          
          <div class="fc-view-container">
            <div class="fc-view fc-agendaWeek-view fc-agenda-view">

              <table class="appointments-table">
                
                <tr class="appointments-table-header">
                  <td>Time</td>
                  <% @days_from_this_week.each do |day|%>
                  <td data-date="<%= day.to_s %>"><%= day.to_formatted_s(:short) %></td>
                  <% end %>
                </tr>
                
                <tr>
                  <td>FollowUp</td>
                  <%= render 'events', appointments: @appointments, days_from_this_week: @days_from_this_week, followUp: true %>
                </tr>

                <tr>
                  <td class="appointments-table-time">9-10</td>
                  <%= render 'events', appointments: @appointments, days_from_this_week: @days_from_this_week, followUp: false, hour: 9 %>
                </tr>

                <tr>
                  <td class="appointments-table-time">10-12</td>
                  <%= render 'events', appointments: @appointments, days_from_this_week: @days_from_this_week, followUp: false, hour: 10  %>
                </tr>

                <tr>
                  <td class="appointments-table-time">12-14</td>
                  <%= render 'events', appointments: @appointments, days_from_this_week: @days_from_this_week, followUp: false, hour: 12 %>
                </tr>

                <tr>
                  <td class="appointments-table-time">14-16</td>
                  <%= render 'events', appointments: @appointments, days_from_this_week: @days_from_this_week, followUp: false, hour: 14 %>
                </tr>

                <tr>
                  <td class="appointments-table-time">16-18</td>
                  <%= render 'events', appointments: @appointments, days_from_this_week: @days_from_this_week, followUp: false, hour: 16 %>
                </tr>

                <tr>
                  <td class="appointments-table-time">18-20</td>
                  <%= render 'events', appointments: @appointments, days_from_this_week: @days_from_this_week, followUp: false, hour: 18 %>
                </tr>

                <tr>
                  <td class="appointments-table-time">20-21</td>
                  <%= render 'events', appointments: @appointments, days_from_this_week: @days_from_this_week, followUp: false, hour: 20 %>
                </tr>

              </table>
            </div>
          </div>

          

        </div>
      </div>
    </div>
  </div>


