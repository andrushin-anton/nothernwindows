<div class="page-title">
  <div class="title_left">
    <h3>Logs <small></small></h3>
  </div>

  <div class="title_right">
    <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
      <%= form_tag logs_path, :method => 'get' do %>
      <div class="input-group">
          <input type="text" name="search" value="<%= params[:search] %>" class="form-control" placeholder="Search for...">
          <span class="input-group-btn">
          <%= submit_tag "Go!", :name => nil, :class => "btn btn-default search" %>
          </span>
      </div>
      <% end %>
    </div>
  </div>
</div>

<div class="col-md-6 col-sm-6 col-xs-12" style="width:100%">
  <div class="x_panel">
    <div class="x_content">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>#Created_at</th>
            <th>Auditable type</th>
            <th>Auditable id</th>
            <th>Action</th>
            <th>#User id made action</th>
          </tr>
        </thead>
        <tbody>
        <% @logs.each do |log| %>
          <tr>
            <th scope="row"><%= log.created_at %></th>
            <td><%= log.auditable_type %></td>
            <td><%= log.auditable_id %></td>
            <td><%= log.action %></td>
            <td><%= log.user_id %></td>
         </tr>
        <% end %>
        </tbody>
      </table>

      <%= paginate @logs, :left => 1, :right => 3 %>

    </div>
  </div>
</div>
